cd $HOME

# bash setup
ln -sf .configs/bash/bash_profile .bash_profile
ln -sf .configs/git/bashrc .bashrc

# git setup
ln -sf .configs/git/.gitconfig
ln -sf .configs/git/.gitignore

# vim setup
ln -sf .configs/vim .vim
ln -sf .configs/vim/vimrc .vimrc
ln -sf .configs/vim/gvimrc .gvimrc

# emacs setup
ln -sf .configs/emacs/emacs .emacs
